<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scripts.WoodsActivity"
    android:background="@drawable/las2">

    <Button
        android:id="@+id/clickableResourceArea"
        android:layout_width="342dp"
        android:layout_height="310dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="157dp"
        android:layout_marginBottom="20dp"
        android:background="#00ffffff" />

    <TextView
        android:id="@+id/woodStorage"
        android:layout_width="114dp"
        android:layout_height="62dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="92dp"
        android:layout_toStartOf="@+id/goBackToVillage"
        android:layout_toEndOf="@+id/woodIcon"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:text="0"
        android:textSize="36sp" />

    <Button
        android:id="@+id/goBackToVillage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="Go Back" />

    <ImageView
        android:id="@+id/woodIcon"
        android:layout_width="70dp"
        android:layout_height="39dp"
        android:layout_above="@+id/clickableResourceArea"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="-44dp"
        android:contentDescription="TODO"
        android:src="@drawable/wood_icon" />

    <ImageView
        android:id="@+id/tree"
        android:layout_width="335dp"
        android:layout_height="307dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/drzewo" />

    <ImageView
        android:id="@+id/deer"
        android:layout_width="88dp"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="38dp"
        android:src="@drawable/jelen2big" />

    <TextView
        android:id="@+id/addFoodInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="63dp"
        android:layout_marginBottom="131dp"
        android:text="+"
        android:textColor="#fff"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/foodPlus"
        android:layout_width="29dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="127dp"
        android:src="@drawable/mieso" />

</RelativeLayout>